  image: ee.Image(nightMax),
  description: 'Nepal_Night_LST_Max_2019',
  folder: 'Nepal_LST_Analysis',
  region: nepal,
  scale: 1000,
  crs: 'EPSG:4326',
  maxPixels: 1e9,
  fileFormat: 'GeoTIFF'
});

// Export Day LST Minimum
Export.image.toDrive({
  image: ee.Image(dayMin),
  description: 'Nepal_Day_LST_Min_2019',
  folder: 'Nepal_LST_Analysis',
  region: nepal,
  scale: 1000,
  crs: 'EPSG:4326',
  maxPixels: 1e9,
  fileFormat: 'GeoTIFF'
